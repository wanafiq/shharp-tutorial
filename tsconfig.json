{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["ES2015"],
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    }
}
